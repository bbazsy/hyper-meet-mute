{
  "name": "Hyper Meet Mute",
  "short_name": "Myper-Meet-Mute",
  "author": "Bal√°zs Bozsogi, from Adrian Palumbo, from Matt Simonis",
  "version": "1.2.0",
  "manifest_version": 3,
  "description": "Fast and global mute toggling for Google Meet.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["js/meetmute.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Disconnected"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://meet.google.com/*"],
  "commands": {
    "toggle_mute": {
      "description": "Toggle Mute",
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "global": true
    }
  }
}
